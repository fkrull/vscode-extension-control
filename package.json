{
    "name": "extension-control",
    "displayName": "Extension Control",
    "description": "Manage VS Code extensions",
    "version": "0.0.1",
    "publisher": "fkrull",
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extensionControl.syncLocalExtensions",
        "onCommand:extensionControl.installMissingExtensions"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extensionControl.syncLocalExtensions",
                "title": "Extension Control: Sync Local Extensions"
            },
            {
                "command": "extensionControl.installMissingExtensions",
                "category": "Extension Control",
                "title": "Install Missing Extensions"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Extension Control configuration",
            "properties": {
                "extensionControl.userDirectory": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Path to the user directory (where extensions.json is)."
                },
                "extensionControl.extensionDirectory": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Path to the extension directory (where extensions are installed)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "test-standalone": "npm run compile && node ./node_modules/mocha/bin/_mocha --recursive --colors --ui=tdd out/test/standalone"
    },
    "dependencies": {
        "axios": "^0.16.2",
        "fs-extra": "^4.0.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^4.0.2",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "@types/tmp": "^0.0.33",
        "mocha": "^3.5.0",
        "tmp": "^0.0.33",
        "ts-mockito": "^2.1.1",
        "tslint": "^5.7.0",
        "typemoq": "^2.0.1",
        "typescript": "^2.5.2",
        "vscode": "^1.1.5"
    }
}
